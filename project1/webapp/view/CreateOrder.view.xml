<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:sap.ui.layout.form="sap.ui.layout.form"
          xmlns:sap.ui.core="sap.ui.core"
          controllerName="com.sapui5.casestudy.group4.project1.controller.MainView">

    <Page id="page0" title="Create Order" floatingFooter="true">
        <content>
            <Panel width="auto" expanded="true" id="panel1" class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar id="toolbar1">
                        <Title id="_IDGenTitle" text="Order Details"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <HBox id="_IDGenHBox" justifyContent="Center">
                        <sap.ui.layout.form:SimpleForm editable="true" layout="ColumnLayout" id="form0">
                            <sap.ui.layout.form:content>
                                <Label text="Receiving Plant" id="label0" required="true"/>
                                <Input id="recPlant" type="Text" showValueHelp="true"
                                       valueHelpRequest=".onValueHelpRequest" width="15rem"/>
                                <Label text="Delivering Plant" id="label1" required="true"/>
                                <Input id="delPlant" type="Text" showValueHelp="true"
                                       valueHelpRequest=".onValueHelpRequest" width="15rem"/>
                            </sap.ui.layout.form:content>
                        </sap.ui.layout.form:SimpleForm>
                    </HBox>
                </content>
            </Panel>
            <Panel width="auto" expanded="true" id="panel0" class="sapUiResponsiveMargin">
                <headerToolbar>
                    <Toolbar id="toolbar1_1755502251171">
                        <Title id="_IDGenTitle2" text="Products"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer2"/>
                        <Button id="button1" icon="sap-icon://add"/>
                        <content>
                            <Button id="button2" icon="sap-icon://delete"/>
                        </content>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <Table noDataText="No Data" items="{/products}" id="table0">
                        <columns>
                            <Column id="columnSelect" width="3rem">
                                <header>
                                    <CheckBox id="selectAllCheckBox"
                                              select=".onSelectAll"
                                              tooltip="Select/Deselect All Rows"/>
                                </header>
                            </Column>
                            <Column id="column0">
                                <header>
                                    <Label text="Product Name" id="label0_1755502754996"/>
                                </header>
                            </Column>
                            <Column id="column1">
                                <header>
                                    <Label text="Quantity" id="label1_1755502754996"/>
                                </header>
                            </Column>
                            <Column id="column2">
                                <header>
                                    <Label text="Price Per Quantity" id="label2"/>
                                </header>
                            </Column>
                            <Column id="column3">
                                <header>
                                    <Label text="Total Price" id="label3"/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Active" id="item0">
                                <cells>
                                    <CheckBox selected="{selected}" />
                                    <Text text="{name}" />
                                    <Text text="{quantity}" />
                                    <Text text="{price}" />
                                    <Text text="{total}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </Panel>
        </content>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <Button id="btn_save" text="Save" tooltip="Save" type="Accept"/>
                <Button id="btn_cancel" text="Cancel" tooltip="Cancel" type="Reject"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>